<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >
        <item name="android:background">#DE2922</item>
    </style>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="TimePickerTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/lightBlack</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColorSecondary">@color/lightBlack</item>
    </style>
    <style name="DatePickerTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/lightBlack</item>
        <item name="android:textColorPrimary">@color/cherry_tomato</item>
        <item name="android:textColorSecondary">@color/lighterBlack</item>
    </style>
    <style name="SpinnerTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/cherry_tomato</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColorPrimary">@color/cherry_tomato</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>
    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/cherry_tomato</item>
        <item name="colorSwitchThumbNormal">@color/dark_cherry1</item>
        <item name="android:colorForeground">@color/dark_cherry2</item>
    </style>
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up_animation</item>
        <item name="android:windowExitAnimation">@anim/slide_down_animation</item>
    </style>
    <style name="DialogAnimation1">
        <item name="android:windowEnterAnimation">@anim/slide_left_animation</item>
        <item name="android:windowExitAnimation">@anim/slide_right_animation</item>
    </style>
</resources>

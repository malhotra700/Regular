<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/round_rec_getin"
        android:backgroundTint="@color/lightBlack">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="* To add an event."
                android:padding="2dp"
                android:layout_margin="8dp"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="italic"
                />
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:padding="4dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_add"
                android:background="@drawable/shape_badge_border"
                android:backgroundTint="@color/cherry_tomato"
                android:tint="@color/black"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="* Click to set an alarm\n(available for the events of next 24 hrs)."
                android:padding="2dp"
                android:layout_margin="8dp"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="italic"
                />
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:padding="4dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_alarm"
                android:tint="@color/white"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="* Events of priority."
                android:padding="2dp"
                android:layout_margin="8dp"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="italic"
                />
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:padding="4dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_star"
                android:tint="#ffff00"/>
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="* Long press to delete an event."
            android:padding="2dp"
            android:layout_margin="8dp"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="italic"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="* New event on a specific date will replace an existing event on that date having same start time(if any)."
            android:padding="2dp"
            android:layout_margin="8dp"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="italic"
            />
        <Switch
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:shadowColor="@color/cherry_tomato"
            android:id="@+id/switch_notify"
            android:text="Enable Reminder Notifications"
            android:theme="@style/SCBSwitch"
            android:padding="2dp"
            android:layout_margin="8dp"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="italic" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="* Enable recommended only if you want to keep the app running in background (i.e. not removing/killing the app from the recent apps tray)."
            android:layout_margin="8dp"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="italic"
            />

    </LinearLayout>
</LinearLayout>
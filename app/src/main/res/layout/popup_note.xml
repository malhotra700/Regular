<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="8dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:id="@+id/pop_task_card_view"
        android:layout_above="@id/add_task_btn">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="8dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Heading"
                    android:background="@color/black"
                    android:padding="2dp"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:textStyle="bold"
                    >
                </TextView>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/task_heading"
                    android:inputType="text"
                    android:gravity="start"
                    android:background="@color/black"
                    android:textColor="@color/cherry_tomato"
                    android:textColorHint="@color/lightBlack"
                    android:padding="2dp"
                    android:textSize="24sp"
                    android:hint="Untitled Heading">
                </EditText>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/lightBlack"></View>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Note"
                    android:background="@color/black"
                    android:padding="2dp"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:textStyle="bold"
                    >
                </TextView>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/task_text"
                    android:inputType="textMultiLine"
                    android:minLines="5"
                    android:maxLines="100"
                    android:gravity="start"
                    android:background="@color/black"
                    android:textColor="@color/white"
                    android:textColorHint="@color/lightBlack"
                    android:padding="2dp"
                    android:textSize="18sp"
                    android:hint="Write your note here.">
                </EditText>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="4dp"
                    android:id="@+id/extra_btns"
                    android:visibility="gone">
                    <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_rounded_rectangle"
                    android:backgroundTint="@color/dark_cherry1"
                    android:text=" Add Bullet "
                    android:textColor="@color/white"
                    android:layout_margin="4dp"
                    android:padding="4dp"
                    android:id="@+id/task_bullet_btn"/>
                    <ImageButton
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/shape_rounded_rectangle"
                        android:backgroundTint="@color/dark_cherry1"
                        android:tint="@color/white"
                        android:src="@drawable/ic_mic"
                        android:textColor="@color/white"
                        android:layout_margin="4dp"
                        android:padding="4dp"
                        android:id="@+id/task_stt_btn"/>

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/lightBlack"></View>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Share To : "
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:padding="8dp"
                        android:textColor="@color/white"/>
                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@color/black"
                    android:src="@drawable/ic_whatsapp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:tint="@color/white"
                    android:padding="8dp"
                    android:id="@+id/share_to_whatsapp">
                </ImageButton>
                    <ImageButton
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@color/black"
                        android:src="@drawable/ic_mail"
                        android:tint="@color/white"
                        android:padding="8dp"
                        android:id="@+id/share_to_gmail">
                    </ImageButton>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>
    <Button
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:layout_alignParentBottom="true"
        android:text="ADD NOTE"
        android:background="@color/cherry_tomato"
        android:textSize="18sp"
        android:textColor="#ffffff"
        android:lineSpacingExtra="14sp"
        android:id="@+id/add_task_btn">
    </Button>
</RelativeLayout>
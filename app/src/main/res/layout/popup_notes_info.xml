<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/round_rec_getin"
        android:backgroundTint="@color/lightBlack">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="* To add a note."
                android:padding="2dp"
                android:layout_margin="8dp"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="italic"
                />
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:padding="4dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_pencil"
                android:background="@drawable/shape_badge_border"
                android:backgroundTint="@color/cherry_tomato"
                android:tint="@color/black"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="* Hold the button and speak your note."
                android:padding="2dp"
                android:layout_margin="8dp"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="italic"
                />
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:padding="4dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_mic"
                android:background="@drawable/shape_badge_border"
                android:backgroundTint="@color/dark_cherry1"
                android:tint="@color/white"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="* Button to mark a bullet \'•\' as \ndone \'✓\' and vice versa."
                android:padding="2dp"
                android:layout_margin="8dp"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="italic"
                />
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:padding="4dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_check"
                android:background="@drawable/shape_badge_border"
                android:backgroundTint="@color/dark_cherry1"
                android:tint="@color/white"/>
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="* Add Bullet button to add bullet \'•\' to your note."
            android:padding="2dp"
            android:layout_margin="8dp"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="italic"
            />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="* Long press to delete a note."
            android:padding="2dp"
            android:layout_margin="8dp"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="italic"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="* Click on the existing note to edit."
            android:padding="2dp"
            android:layout_margin="8dp"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="italic"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="* New note will replace an existing note having same heading(if any)."
            android:padding="2dp"
            android:layout_margin="8dp"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="italic"
            />

    </LinearLayout>
</LinearLayout>